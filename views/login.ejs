<!DOCTYPE html>
<html>
<head>
    <%- include('_head.ejs') %>

    <!-- Style -->
    <link rel='stylesheet' type='text/css' href='/public/styles/login.css'/>

    <!-- Script -->
    <script type='module' src='/public/script/login.js'></script>
</head>
<body>
    <!-- Balloon -->
    <%- include("_balloon.ejs") %>

    <!-- Navigation -->
    <%- include('_nav.ejs') %>

    <!-- Content -->
    <div class='content'>
        <!-- Registration form -->
        <form class='form' id='login-form'>
            <h1 class='form__title'>ğŸŒï¸â€â™€ï¸ Login ğŸŒï¸â€â™‚ï¸</h1>

            <input class='form__input' type='text' name='login-credential' id='login-credential' placeholder='Username/ID' aria-label='Username / ID'/>
